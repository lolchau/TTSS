{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build C++ (g++)",
            "type": "shell",
            "command": "C:/mingw64/bin/g++.exe",
            "args": [
                "-std=c++20",
                "-g",
                "${file}",
                "-o",
                "${fileDirname}/${fileBasenameNoExtension}.exe"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": ["$gcc"]
        }
    ]
}
